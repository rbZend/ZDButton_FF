{

  "manifest_version": 2,
  "name": "Zend Debugger Button",
  "short_name": "ZDButton",
  "version": "0.4",
  "author": "Roman Basayev",
  "homepage_url": "https://github.com/rbZend/ZDButton_FF",
  "description": "Launches basic Zend Debugger commands",
  "icons": {
      "48": "icons8-bug-48.png",
      "96": "icons8-bug-96.png"
  },

  "permissions": [
      "tabs",
      "cookies",
      "storage",
      "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons8-bug-32.png",
    "default_title": "Zend Debugger Button",
    "default_popup": "popup.html"
  }
}
